<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Catstagram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
     nav {
         position: fixed;
         top: 0;
         left: 0;
         right: 0;
         display: flex;
         justify-content: space-between;
         align-items: center;
         background-color: #333;
         color: white;
         height: 80px;
         padding: 0 20px;
         z-index: 1
     }

     nav a {
         color: white;
         text-decoration: none;
         margin: 0 10px;
         font-size: 20px;
         font-weight: bold;
         text-transform: uppercase;
         letter-spacing: 1px;
         transition: all 0.2s ease-in-out;
     }

     nav a:first-child {
         margin-right: auto;
     }

     nav a:hover {
         transform: scale(1.1);
     }

     main {
         margin-top: 80px;
         padding: 20px;
     }
    </style>
</head>
<body>
    <nav>
        <a asp-area="" asp-controller="Wall" asp-action=""><i class="bi bi-house"></i>Catstragram</a>
        <a asp-area="" asp-controller="Wall" asp-action="Create"><i class="bi bi-pencil-square"></i>Add new post</a>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - Catstagram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
